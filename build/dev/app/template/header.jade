header.container-fluid
	div(class="container")
		button(type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-6" aria-expanded="false")
			span.icon-bar
			span.icon-bar
			span.icon-bar
		a(href="/" class="navbar-brand") Store
		div.collapse.navbar-collapse#bs-example-navbar-collapse-6
			ul.nav.navbar-nav
				- var menuItem = ["Dashboard","Products","Categories","Users"]
				- var userList = [["User Profile", "fa fa-user"],["Settings", "fa fa-cog"],["Log Out", "glyphicon glyphicon-log-out"]]
				mixin menu(items)
					each item in items
						li: a(href="#") #{item}
				mixin dropMenu(items)
							each elem, index in items
								if (index==2)
									li.bordered
										a(href="#")
											i(class=elem[1])
											span #{elem[0]}
								else
									li
										a(href="#") 
											i(class=elem[1])
											span #{elem[0]}

				+menu(menuItem)
			ul.navbar-right.nav.navbar-nav
				li
					div(class="dropdown-toggle", data-toggle="dropdown", aria-haspopup="true", aria-expanded="true")
						i.fa.fa-bell
						span.caret
					div.dropdown-menu
				li
					div(class="dropdown-toggle", data-toggle="dropdown", aria-haspopup="true", aria-expanded="true")
						i.fa.fa-user
						span.caret
					ul.dropdown-menu
						+dropMenu(userList)
					
								

